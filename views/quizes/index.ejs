<form method='get' action='/quizes'>
<label>Buscar:</label><input type="text" name="search">
<input type="submit" value="Buscar">
<input type="reset" value="limpiar">
</form>
<dl style='text-align:left;'>
<% var tema=''; var i; for(i=0; i<quizes.length; i++){ 	%>
	<% if(tema!=quizes[i].tema){%>
		<dt><%= quizes[i].tema %></dt>
	<% 	tema=quizes[i].tema; }%>
	<dl><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
	<% if(session.user){ %>
	<a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a>
	<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
		<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>?');">
		Borrar
		</button>
	</form>
	<% } %>
	</dl>
<% } %>
</dl>
<% if(session.user){ %>
	<a href="quizes/new">Crear nueva pregunta </a>
<% } %>